{
  "compilerOptions": {
    "module": "es2020",
    "target": "es6",
    "lib": ["es6", "dom"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "importHelpers": true,
    "declaration": true,
    "noEmit": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "*.test.tsx"]
}
